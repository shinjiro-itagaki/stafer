{
    "compilerOptions": {
        "module": "commonjs",
        "allowJs": false,
        "target": "es5",
        "lib": ["dom", "es2019"],
        "noImplicitAny": false,
        "jsx": "react",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "incremental": true,
        "outDir": "./public/js",
        "strict": true,
        "moduleResolution": "node",
        "alwaysStrict": true
    },
    "include": [
//        "src/**/*"
        "src/index.ts"
    ],
    "typeRoots": [
        "node_modules/@types"
    ],
    "exclude": [
        "node_modules"
    ]
}
